# Gemini API Key (alternative to Bedrock)
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# AWS Credentials for Textract and Bedrock
VITE_AWS_ACCESS_KEY_ID=your_aws_access_key_id
VITE_AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
VITE_AWS_REGION=us-east-1

# ============================================
# BACKEND SERVER ENVIRONMENT VARIABLES
# ============================================

# Gemini AI Configuration (Backend)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/medilingo

# Server Configuration
PORT=5000
NODE_ENV=development

# Session Secret (REQUIRED - generate a random string)
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_super_secret_session_key_here_min_32_chars

# Email Configuration for OTP (Gmail example)
# For Gmail: Enable "App Passwords" at https://myaccount.google.com/apppasswords
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_16_character_app_password_here
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
